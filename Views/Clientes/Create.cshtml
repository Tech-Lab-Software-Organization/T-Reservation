@model T_Reservation.Models.Cliente

@{
    ViewData["Title"] = "Registrar Cliente";
}
<div class="card">
    <div class="card-body">

<h1 class="card-title">Cliente</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Dui" class="control-label"></label>
                <input asp-for="Dui" class="form-control" />
                <span asp-validation-for="Dui" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group col-md-7">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group colcol-md-6">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="FechaNacimiento" class="control-label"></label>
                <input asp-for="FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Passaword" class="control-label"></label>
                <input asp-for="Passaword" class="form-control" />
                <span asp-validation-for="Passaword" class="text-danger"></span>
            </div>
            <div class="form-group col-md-7">
                <label asp-for="RestauranteId" class="control-label"></label>
                <select asp-for="RestauranteId" class ="form-control" asp-items="ViewBag.RestauranteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-secondary" /> |
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    </div>
</div>
