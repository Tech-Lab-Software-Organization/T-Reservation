@model IEnumerable<T_Reservation.Models.Menu>

@{
    ViewData["Title"] = "Menu";
}
<div class="card"> <div class="card-body">
        <h1 div class="card-title text-center">🦐Menú🦐</h1>
</div>
</div>
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <img class="rounded mx-auto d-block" src="data:image/jpg;base64,@(Convert.ToBase64String(item.Imagen))" width="95" height="95" />
                    <h5 class="card-title">@item.Producto @item.Producto</h5>
                    <p class="card-text">
                        <strong>Nota Especial:</strong> @item.NotaEspecial <br />
                        <strong>Precio:</strong> @item.Precio <br />

                    </p>
                    <div class="text-right">
                       
                        <a href="@Url.Action("VerMas", new { id = item.Id })" class="btn btn-outline-dark">Ver más</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

