@model T_Reservation.Models.Restaurante

@{
    ViewData["Title"] = "VerMasR";
}
<div class="card">
    <div class="card-body">

<h1 class="card-title">Detalles</h1>

<div>
    <h4>Restaurante</h4>
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Imagen != null && Model.Imagen.Length > 0)
            {
                <img src="data:image/jpg;base64,@(Convert.ToBase64String(Model.Imagen))" style="max-width: 100px; max-height: 100px;" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id"></a>
    <a asp-action="CatalogoRestaurante" class="btn btn-outline-secondary">Regresar</a>
    <a asp-action="CatalogoMenu" class="btn btn-outline-secondary">Ver menu</a>
</div>
    </div>
</div>
