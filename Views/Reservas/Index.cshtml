@model IEnumerable<T_Reservation.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}

@{
    var httpContext = ViewContext.HttpContext;
    var usuarioRol = httpContext.Session.GetString("UsuarioRol");
   
}


<div class="card">
    <div class="card-body">
        <h1 class="card-title">Reservaciones</h1>

<p>
            @if (usuarioRol == "Administrador" || usuarioRol == "Cliente")

            {
                <a asp-action="Create" class="btn btn-secondary">Nueva Reserva</a>
            }
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-sm">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadPersonas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.Cliente.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurante.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesa.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadPersonas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td class="btn-group-vertical">
                                @if (usuarioRol == "Administrador" || usuarioRol == "Cliente")

                                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Editar</a>
                                }
                                @if (usuarioRol == "Administrador" || usuarioRol == "Cliente" || usuarioRol == "Empleado")

                                    {
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalles</a>
                                    }
                                @if (usuarioRol == "Administrador" || usuarioRol == "Cliente" )

                                        {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                                        }
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
