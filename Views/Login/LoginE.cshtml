@model T_Reservation.Models.Empleado

@{
    ViewBag.Title = "Inicio de Sesión";
}

<h4>Empleado</h4>
<hr />

    <div class="col-md-4">
        <form asp-action="LoginE">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <div class="form-group">
             <label asp-for="Correo" class="control-label"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-primary" />
                <span>@ViewBag.Error</span>
                <label class="control-label">¿No tienes una cuenta?</label>
            <span> <a asp-area="" class="btn btn-link" asp-controller="Empleados" asp-action="Create">Registrar</a></span>
            <a asp-area="" class="btn btn-secondary" asp-controller="Home" asp-action="IndexHome">Cancelar</a>
            </div>
        </form>
    </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}