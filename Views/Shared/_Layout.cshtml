<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - T-Reservation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/T_Reservation.styles.css" asp-append-version="true" />
</head>
<body class="bg-image" style="background-image: url('https://static.vecteezy.com/system/resources/previews/015/805/854/non_2x/eco-friendly-cutlery-seamless-pattern-knife-fork-spoon-eco-kitchen-cutlery-vector.jpg');">
    <header>
       
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 navbar-dark bg-body">
            <div class="container-fluid">
                <a class="navbar-brand">T-Reservation</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                         @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>

                                </li>
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>

                                </li>
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CatalogoMenu">Catálogo de Menú</a>

                                </li>
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Menus" asp-action="Index">Menú</a>

                                </li>
                               
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Reservas" asp-action="Index">Reservaciones</a>

                                </li>
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CatalogoRestaurante">Catálogo Restaurante</a>

                                </li>
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Restaurantes" asp-action="Index">Restaurantes</a>

                                </li>
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Login">Cerrar Sesión</a>
                                </li>
                                <li class="nav-item">

                                    <a class="nav-link text-white" asp-area="" asp-controller="Restaurantes" asp-action="GraficoPorFecha">Grafico</a>

                                </li>
                            }
                        }
                        @if (User.IsInRole("Empleado"))
                        {
                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Restaurantes" asp-action="Index">Restaurants</a>

                            </li>
                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Menus" asp-action="Index">Menú</a>

                            </li>
                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Reservas" asp-action="Index">Reservaciones</a>

                            </li>
                           
                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>

                            </li>
                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Login">Cerrar Sesión</a>
                            </li>
                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Restaurantes" asp-action="GraficoPorFecha">Grafico</a>

                            </li>
                        }

                           @if (User.IsInRole("Cliente"))
                        {
                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CatalogoRestaurante">Catálogo Restaurante</a>

                            </li>
                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Reservas" asp-action="Index">Reservaciones</a>

                            </li>
                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CatalogoMenu">Catálogo de Menú</a>

                            </li>

                            <li class="nav-item">

                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Login">Cerrar Sesión</a>
                            </li>
                        }
                        
                            <li>
                              <span>@User.Identity.Name</span>
                            </li>
                        
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2024 T-Reservation
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    
</body>
</html>
