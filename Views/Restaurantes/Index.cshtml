@model IEnumerable<T_Reservation.Models.Restaurante>

@{
    ViewData["Title"] = "Index";
}
<div class="card">
    <div class="card-body">
<h1 class="card-title">Restaurante</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Agregar nuevo restaurante</a>
</p>
     
<table class="table table-bordered table-sm">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleados)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
                <td>
                    @if (item.Imagen != null && item.Imagen.Length > 0)
                    {
                        <img class="bloque d mx-auto redondeado" src="data:image/jpg;base64,@(Convert.ToBase64String(item.Imagen))" style="max-width: 100px; max-height: 100px;">
                    }

                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleados.Nombre)
            </td>
                        <td class="btn-group-vertical">
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Editar</a>
      <a asp-action="DeleteImagen" asp-route-id="@item.Id" class="btn btn-danger">Eliminar Imagen</a>
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalles</a>
           <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>         
           </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
